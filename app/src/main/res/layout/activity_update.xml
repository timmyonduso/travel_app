<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.UpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction_no"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:id="@+id/transaction_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger Name"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:id="@+id/passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <CheckBox
            android:id="@+id/radioButtonLuggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luggage"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/radioButtonLuggageOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luggage Only"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"/>
    </RadioGroup>

    <com.example.travel_app.model.AutocompleteEditText
        android:id="@+id/location_from"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="From Location"
        android:background="@drawable/border_bg"/>

    <com.example.travel_app.model.AutocompleteEditText
        android:id="@+id/location_to"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="To Location"
        android:background="@drawable/border_bg"/>

    <Button
        android:id="@+id/connect"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Connect"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        />
</LinearLayout>