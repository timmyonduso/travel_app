<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.CashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cash Collection"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <CheckBox
                android:id="@+id/radioButtonLuggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luggage"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/radioButtonLuggageOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luggage Only"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>
        </RadioGroup>

        <com.example.travel_app.model.AutocompleteEditText
            android:id="@+id/location_from"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="From Location"
            android:background="@drawable/border_bg"/>

        <com.example.travel_app.model.AutocompleteEditText
            android:id="@+id/location_to"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="To Location"
            android:background="@drawable/border_bg"/>

        <EditText
            android:id="@+id/fare_amount"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="@string/enter_fare_amount"
            android:layout_gravity="center"
            android:background="@drawable/border_bg"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/amount_tendered"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="@string/amount_tendered"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_bg"/>

        <EditText
            android:id="@+id/pass_no"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Number of passengers"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_bg"
            />

        <Button
            android:id="@+id/connect"
            android:layout_height="50dp"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Connect"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            />
    </LinearLayout>

</FrameLayout>